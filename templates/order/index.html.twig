{% extends 'base.html.twig' %}

{% block title %}
    Votre panier
{% endblock %}

{% block body %}
    <div class="container">
        <div class="col-md-12">
            <div class="row">
                <div class="bg-light p-3">
                    <h1>Your order</h1>
                </div>

                {% if items | length > 0 %}
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for item in items %}
                            <tr>
                                <td>{{ item.product.id }}</td>
                                <td>{{ item.product.Name }}</td>
                                <td>{{ item.product.price }}</td>
                                <td>{{ item.quantity }}</td>
                                <td>{{ item.product.price * item.quantity }} €</td>
                                <td>
                                    <a href="{{ path('cart_remove', {'id': item.product.id}) }}" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <th colspan="4" class="text-right">
                                Total :
                            </th>
                            <th>{{ total }} €</th>
                            <th></th>
                        </tr>
                        </tfoot>
                    </table>
                {% else %}
                    <p>Surprise, Your Cart is empty !</p>
                {% endif %}
            </div>
                {% if items | length > 0 %}
                    <button class="button">
                        <a href="{{ path('buy') }}" class="link">Buy</a>
                    </button>
                {% endif %}
        </div>
    </div>

{% endblock %}
